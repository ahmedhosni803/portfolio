{
  "editor.formatOnSave": true,
  "editor.formatOnSaveMode": "file",
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports": "explicit"
  },
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "dart.openDevTools": "browser",
  "dart.previewFlutterUiGuides": true,
  "dart.closingLabels": true,
  "dart.flutterUiGuides": "always",
  "dart.insertArgumentPlaceholders": true,
  "dart.completeFunctionCalls": true,
  "editor.autoClosingBrackets": "always",
  "editor.autoClosingQuotes": "always",
  "editor.autoClosingDelete": "always",
  "editor.autoClosingOvertype": "always",
  "editor.selectionHighlight": true,
  "editor.suggestSelection": "first",
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.stickyScroll.enabled": true,
  "editor.formatOnType": true,
  "editor.matchBrackets": "always",
  "editor.foldingStrategy": "auto",
  "editor.folding": true,
  "editor.showFoldingControls": "always",
  // --> Android Studio Replication Settings <--
  "workbench.iconTheme": "material-icon-theme",
  "workbench.sideBar.location": "left",
  "workbench.panel.defaultLocation": "bottom",
  "workbench.tree.indent": 20,
  "editor.fontFamily": "'JetBrains Mono', 'Menlo', 'Monaco', 'Courier New', monospace",
  "editor.fontSize": 13,
  "editor.lineHeight": 24,
  "editor.rulers": [
    80,
    100
  ],
  "editor.minimap.enabled": true,
  "editor.cursorBlinking": "phase",
  "editor.renderLineHighlight": "all",
  "debug.toolBarLocation": "docked",
  "debug.console.fontSize": 12,
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "pubspec.yaml": "pubspec.lock,pubspec_overrides.yaml,.packages,.flutter-plugins,.flutter-plugins-dependencies",
    "*.dart": "${capture}.g.dart,${capture}.freezed.dart"
  }
}